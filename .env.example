# Server Configuration
NODE_ENV=development
PORT=8080

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=eu-west-2

# Authentication (comma-separated API keys)
API_KEYS=mgator_key_abc123,app2_key_xyz789,app3_key_def456

# Allowed Domains (comma-separated, optional - leave empty to allow all)
ALLOWED_DOMAINS=musicgenreator.com,app2.com,app3.com

# Screenshot Configuration
MAX_CONCURRENT=3
BROWSER_TIMEOUT=30000
MAX_RETRIES=2

# Rate Limiting
RATE_LIMIT_MAX=10

# Puppeteer (optional - uses system Chromium by default in Docker)
# PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium
